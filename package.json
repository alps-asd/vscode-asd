{
    "name": "app-state-diagram",
    "displayName": "Application State Diagram",
    "description": "Renderer for ALPS profiles with custom completion",
    "version": "0.0.7",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:alps-xml",
        "onCommand:extension.renderAsd",
        "onCommand:extension.createAlpsFile"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.renderAsd",
                "title": "Open ALPS Preview"
            },
            {
                "command": "extension.createAlpsFile",
                "title": "Create New ALPS File"
            }
        ],
        "languages": [
            {
                "id": "alps-xml",
                "aliases": [
                    "ALPS XML",
                    "alps-xml"
                ],
                "extensions": [
                    ".alps.xml"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "alps-json",
                "aliases": [
                    "ALPS JSON",
                    "alps-json"
                ],
                "extensions": [
                    ".alps.json"
                ],
                "configuration": "./json-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "alps-xml",
                "scopeName": "text.xml.alps",
                "path": "./syntaxes/alps-xml.tmLanguage.json"
            },
            {
                "language": "alps-json",
                "scopeName": "source.json.alps",
                "path": "./syntaxes/alps-json.tmLanguage.json"
            }
        ],
        "configurationDefaults": {
            "files.associations": {
                "*.alps.xml": "alps-xml"
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "jsonc-parser": "^3.3.1",
        "sax": "^1.4.1",
        "vscode-languageclient": "^8.0.2",
        "vscode-languageserver": "^8.0.2",
        "vscode-languageserver-textdocument": "^1.0.7",
        "xml2js": "^0.4.23"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/sax": "^1.2.7",
        "@types/vscode": "^1.60.0",
        "@types/xml2js": "^0.4.14",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    },
    "publisher": "koriym",
    "repository": {
        "url": "https://github.com/alps-asd/vscode-asd"
    }
}
