{
    "name": "app-state-diagram",
    "displayName": "Application State Diagram",
    "description": "Preview ALPS Profile as an app-state-diagram",
    "version": "0.0.3",
    "publisher": "koriym",
    "engines": {
        "vscode": "^1.91.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:xml",
        "onLanguage:json",
        "onCommand:extension.renderAsd"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.renderAsd",
                "title": "Open ALPS Preview"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "node ./esbuild.js",
        "package": "node ./esbuild.js --minify",
        "watch": "node ./esbuild.js --watch"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "@types/vscode": "^1.90.0",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "esbuild": "^0.14.54",
        "eslint": "^8.13.0",
        "typescript": "^4.9.5"
    },
    "repository": {
        "url": "https://github.com/alps-asd/vscode-asd"
    }
}
